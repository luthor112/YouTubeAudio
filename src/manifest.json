{
  "description": "Redirect YouTube to audio-only",
  "manifest_version": 2,
  "name": "YouTubeAudio",
  "version": "1.3",
  "icons": {
    "32": "icons/redir_off.png"
  },

  "permissions": [
    "*://*.googlevideo.com/*",
    "*://*.youtube.com/*",
    "webRequest"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/redir_off.png",
    "default_title": "Enable redirection to audio"
  }
}